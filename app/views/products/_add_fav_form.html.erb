<%= form_with(model: current_user.product_favorites.build, local: false) do |form|  %>
  <%= form.hidden_field :product_id, value: @product.id %>
  <!-- @todo if user added the product to favor list i class should be bi bi-hearth-fill -->
  <% if user_signed_in? %>
    <i onclick="clickSubmit() " class="bi bi-heart" style="color:red;cursor:pointer;"></i> 
    <%= form.submit 'Add Favorite', style: "display: none;", id: "add-fav" %>
  <% end %>   
<% end %>   
