<h1>Hello👋🏻 Do you like products? Buy Now! Products </h1>
<div class="container">
  <div class="row">
    <% if @fav_products.size > 0 %>
      <% @fav_products.each do |product| %>
        <div class="col-3">
          <div class="card mt-3" style="width: 18rem;">
              <img src="https://picsum.photos/id/<%=rand(1...100)%>/300/300" style="box-shadow: 0 13px 27px -5px hsl(240deg 30% 28% / 25%);" class="img-fluid rounded m-3" alt="">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= truncate(product.description, :length => 100) %></p>
              <%= link_to "Product Details", product_path(product), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
     <p>You did not add product to favorite list. <%= link_to "See all products", root_path %></p>  
    <% end %> 
  </div>
</div>
